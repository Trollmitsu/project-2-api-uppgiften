@model Project_2_Mvc_homepage.ViewModel.ProjectViewModels.ProjectViewModel


@{
    ViewData["Title"] = "All Projects";
}

<h1>All Projects </h1>
<table class="table table-hover table-striped">
    <tr>
        <th>Owner</th>
        <th>ID</th>
        <th>Project Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>   
    @foreach (var proj in Model.Projects)
    {
        <tr>
            <td>@proj.Customer.Name</td>
            <td> @proj.Id</td>
            <td> @proj.ProjectName</td>

            <td><a asp-controller="Project" asp-action="Edit" asp-route-id="@proj.Id"><i class='bx bxs-edit-alt'></i> </a></td>
            <td>
                <form method="post">
                    <button class="text-danger border-0" asp-controller="Project" asp-action="Delete" asp-route-id="@proj.Id" type="submit"><i class='bx bxs-message-x'></i> </button>
                </form>
                
            </td>
        </tr>
    }
</table>
<a asp-controller="Project" asp-action="Create">
    Create New
</a>